{
    "name": "Snap",
    "version": "0.1",
    "description": "Fast and simple webpage sharing!",
    "permissions": ["activeTab","declarativeContent","storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action":{
    	"default_popup": "popup.html"
    },
    "options_page": "options.html",
    "manifest_version": 2
  }