{
    "name": "Snap",
    "version": "0.1",
    "description": "Fast and simple webpage sharing!",
    "permissions": ["activeTab","storage","notifications","http://*/*"],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action":{
    	"default_popup": "popup.html",
    	"default_icon": "logo.png"
    },
    "options_page": "options.html",
    "manifest_version": 2
  }